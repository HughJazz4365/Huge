const vert = entrypoint(.vertex){
	push vp, model : mat4
	const verts : [4]vec2 = .{
		.{-1,-1},
		.{-1, 1},
		.{1 ,-1},
		.{1 , 1},
	}

	const pos = verts[@vertex_id]
	@position = vec4{pos, 0, 1} 
	out uv : vec2 = pos * .{0.5} + .{0.5}
	//@position = vp * model * vec4{uv, 0, 1} 
}

const frag = entrypoint(.fragment){
    in uv: vec2
	out col : vec4 = .{uv, 1, 1}
}
