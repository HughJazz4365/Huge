const vert = entrypoint(.vertex){
	push vp, model : mat4
	in pos, normal,
	out(.flat) out_normal : vec3 = ,,normal

	@position = vp * model * vec4{pos, 1} 
	//@position = vec4{pos, 1} 

}

const frag = entrypoint(.fragment){
	in(.flat) normal: vec3

	const light_dir  = |vec3{3, -9, -1}
	const diffuse = normal *** -light_dir

	out o : vec4 = .{vec3{diffuse}, 1}
}

